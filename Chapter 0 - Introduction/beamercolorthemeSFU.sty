\mode<presentation>

\definecolor{SFUgray}{RGB}{84, 88, 90}
\definecolor{SFUgold}{RGB}{193, 160, 30}
\definecolor{SFUred}{RGB}{204, 6, 51}
\definecolor{SFUblue}{RGB}{28, 79, 156} 

\setbeamercolor{structure}{fg=SFUblue} % itemize, enumerate, etc

\setbeamercolor{palette primary}{fg = white, bg = SFUred!70}
\setbeamercolor{palette secondary}{fg = white, bg = SFUred!80}
\setbeamercolor{palette tertiary}{fg = white, bg = SFUred!90}
\setbeamercolor{palette quaternary}{fg = white,  bg = SFUred}

\setbeamercolor{titlelike}{parent=palette quaternary}

% Override palette coloring 
\setbeamercolor{title in head/foot}{bg = SFUblue, fg = white}   % changes the background of the right part of the bottom of the slide
\setbeamercolor{author in head/foot}{bg = SFUred, fg = white}   % changes the background of the left part of the bottom of the slide

\setbeamercolor{block title}{fg = white, bg = SFUblue}
%\setbeamercolor{block title alerted}{use = alerted text, fg = white, bg = alerted text.fg!75!bg}
\setbeamercolor{block title alerted}{use = alerted text, fg = white, bg = SFUred}
\setbeamercolor{block title example}{use = example text, fg = white, bg = example text.fg!75!bg}

\setbeamercolor{block body}{parent = normal text, use = block title, bg = block title.bg!25!bg}
\setbeamercolor{block body alerted}{parent = normal text, use = block title alerted, bg = block title alerted.bg!25!bg}
\setbeamercolor{block body example}{parent = normal text, use = block title example, bg = block title example.bg!25!bg}

\setbeamercolor{sidebar}{bg = SFUblue!70}
  
\setbeamercolor{palette sidebar primary}{fg = SFUblue}
\setbeamercolor{palette sidebar secondary}{fg = SFUblue!75}
\setbeamercolor{palette sidebar tertiary}{fg = SFUblue!75}
\setbeamercolor{palette sidebar quaternary}{fg = SFUblue}

\setbeamercolor*{separation line}{}
\setbeamercolor*{fine separation line}{}
% Theorem environments: make the assumption environment based on exampleblock aesthetics
\setbeamertemplate{theorems}[numbered]

 % Attempt to remove brackets by default in definition titles IN BEAMER (different in an article class)
%\makeatletter
\setbeamertemplate{theorem begin}
{%
  \begin{\inserttheoremblockenv}
    {%
      \inserttheoremheadfont
      \inserttheoremname
      \inserttheoremnumber
      \ifx\inserttheoremaddition\@empty\else\ \inserttheoremaddition\fi%
      %\inserttheorempunctuation   % would add a period after the title of the theorem
    }%
}
%\makeatother

  \def\th@assumption{%
    \normalfont % body font
    \def\inserttheoremblockenv{exampleblock}
  }
\theoremstyle{assumption}
\newtheorem{assumption}{Assumption}
\newtheorem*{assumption*}{Assumption:}

  \def\th@thm{%
    \normalfont % body font
    \def\inserttheoremblockenv{alertblock}
  }
\theoremstyle{thm}
\newtheorem{thm}{Theorem}
\newtheorem*{thm*}{Theorem:}

  \def\th@dfn{%

    \normalfont % body font
    \def\inserttheoremblockenv{block}
  }

\theoremstyle{definition}
\newtheorem*{dfn*}{Definition:}

\newtheorem{dfn}{Definition}

